<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" strict="true">
	<Appenders>
		<File name="LOGFILE" fileName="/tmp/deepsea-local.log">
	    		<PatternLayout pattern="%-6level %msg%n"/>
	    	</File>
	</Appenders>
	<Loggers>
		<Root level="ALL">
			<AppenderRef ref="LOGFILE"/>
		</Root>
	</Loggers>
</Configuration>
